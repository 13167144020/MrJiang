.casePic{
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.addInfo,.addDepict,.addInspect{
    padding-left: 30rpx;
    background: #fff;
    border-top:1rpx solid #ebebeb;
    border-bottom: 1rpx solid #ebebeb; 
    margin-bottom: 20rpx;
}
.infoTitle{
    display: block;
    font-size: 34rpx;
    line-height: 114rpx;
    color: #333;
    font-weight: bold;
    border-bottom: 1rpx solid #ebebeb;
}
.infoTitleTwo{
    border: 0;
}
.addList{
    border-bottom:1rpx solid #ebebeb; 
    position: relative;
    padding: 32rpx 66rpx 32rpx 0;
}
.addListTwo{
    border: 0;
}
.listInfo{
    display: flex;
    justify-content: space-between;
}
.addNext{
    width: 16rpx;
    height: 28rpx;
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);

}
.listTitle{
    font-size: 32rpx;
    color: #333;
    line-height: 54rpx;
}
.listInput{
    font-size: 30rpx;
    color: #333;
    text-align: right;
    margin: 0;
    padding: 0;
}
.listTxt{
    font-size: 30rpx;
    color: #333;
}
.addDepict,.addInspect{
    padding:0 30rpx;
}
textarea{
    width: 100%;
    height: 360rpx;
    border: 1rpx solid #ebebeb;
    color: #333;
    padding: 26rpx 30rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}
.addBlock{
    border: 1rpx dashed #ebebeb;
    text-align: center; 
    padding: 80rpx 0 50rpx;
}
.addPic{
    width: 60rpx;
    height: 60rpx;
}
.addTil{
    display: block;
    font-size: 26rpx;
    color: #666;
    padding: 40rpx 0 20rpx;
}
.addTxt{
    display: block;
    font-size: 26rpx;
    color: #999;
}
button{
    margin: 130rpx 0 78rpx;
    background-color: #ff4e4e;
    font-size: 36rpx;
    color: #fff;
    height: 98rpx;
}
button::after{
    border: 0;
}
button:hover{
    background-color: #ff4e4e;
    color: #fff;
}

.rightArea{
    width: 400rpx;
    height: 60rpx;
    white-space:nowrap; 
    text-overflow:ellipsis; 
    overflow: hidden;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: right;
}
.area-item {
    line-height: 40px;
    text-align: center;
}
.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}

.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
    font-size: 28rpx;
    font-family: "微软雅黑";
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
    font-family: "微软雅黑";
    font-size: 30rpx;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
}
.hidden{
    display: none;
}