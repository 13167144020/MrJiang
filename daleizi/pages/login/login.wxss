/* pages/login/login.wxss */
page{
    background: #fff;
}
.loginGray{
    background: #f7f7f7;
    height: 20rpx;
    border-bottom: 1rpx solid #ebebeb;
    border-top: 1rpx solid #ebebeb;
}
.loginDefault{
    height: 120rpx;
    padding: 30rpx 30rpx 0;
    font-size: 28rpx;
    color: #666;
}
.loginDefault > view{
    border-bottom: 1rpx solid #ebebeb;
}
.loginText{
    display: inline-block;
    width: 180rpx;
    line-height: 30rpx;
    padding: 30rpx 0;
}
.loginInput{
    padding: 20rpx 0;
}
.loginInput input{
    width: 100%;
    height: 100%;
}
.input-placeholder{
    color: #DBDBDB;
    font-size: 28rpx;
}
.loginCode{
    font-size: 24rpx;
    color: #66CDC7;
    padding: 30rpx 0;
    line-height: 30rpx;
}
.loginBtn{
    height: 100rpx;
    line-height: 100rpx;
    margin: 120rpx 30rpx 0;
    background: #66CDC7;
    color: #fff;
    font-size: 34rpx;
}